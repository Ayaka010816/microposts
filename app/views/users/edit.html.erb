<%= form_for(@user) do |f|%>
      <%= render 'shared/error_messages', object: f.object %>

<form class="form-horizontal" role="form">
    

      <!-- (1)ユーザー名 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Name">ユーザー名</label>
    
 <div class="col-md-10">
 <%= f.text_field :name, :class => "form-control"%>
    </div>
    </div>

    <!-- メールアドレス -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Email">メールアドレス</label>
   
 <div class="col-md-10">
      <%= f.text_field :email, :class => "form-control"%>
    </div>
    </div>
    
    <!-- 地域 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Location">地域</label>

    <div class="col-md-10">
    <%= f.text_field :location, :class => "form-control"%>    
    </div>
    </div>
  
    <!-- 自己紹介 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Biography">自己紹介</label>

    <div class="col-md-10">
    <%= f.text_field :biography, :class => "form-control"%>
    </div>
    </div>
  
  
  <!-- (4)登録ボタン -->
    <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Save changes", class: "btn btn-large btn-warning"%>
    </div>
    </div>
    <% end %>
</form>
