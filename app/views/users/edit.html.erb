<%= form_for(@user) do |f|%>
      <%= render 'shared/error_messages', object: f.object %>

<form class="form-horizontal" role="form">
    

      <!-- (1)ユーザー名 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Name">ユーザー名</label>
    <%= f.text_field :name, class: 'form-control' %>
    
 <div class="col-md-10">
      <input name="Name"
         class="form-control valid"
         id="Name"
         type="text"
         value=""
         data-val-required="ユーザー名 フィールドが必要です。"
         data-val="true">
    </div>
    </div>

    <!-- メールアドレス -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Email">メールアドレス</label>
    <%= f.email_field :email, class: 'form-control' %>
   
 <div class="col-md-10">
      <input name="Email"
         class="form-control valid"
         id="email"
         type="text"
         value=""
         data-val-required="メールアドレス フィールドが必要です。"
         data-val="true">
    </div>
    </div>
  
    <!-- 自己紹介 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Biography">自己紹介</label>
   <%= f.Biography_field :biography, class: 'form-control' %>

    <div class="col-md-10">
      <input name="Biography"
         class="form-control valid"
         id="Biography"
         type="text"
         value=""
         data-val-required="自己紹介 フィールドが必要です。"
         data-val="true">
    </div>
    </div>
  
    <!-- 地域 -->
    <div class="form-group">
    <label class="col-md-2 control-label" for="Location">地域</label>
   <%= f.location_field :location, class: 'form-control' %>

    <div class="col-md-10">
      <input name="Location"
         class="form-control valid"
         id="Location"
         type="text"
         value=""
         data-val-required="地域 フィールドが必要です。"
         data-val="true">
    </div>
    </div>
  
  <!-- (4)登録ボタン -->
    <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Save changes", class: "btn btn-large btn-warning"%>
    </div>
    </div>
    <% end %>
</form>
